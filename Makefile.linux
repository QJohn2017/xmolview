
include makeinclude.linux

DIRS = src bin

all:   makeinclude.linux
#	if [ -f bin/$(PRGS) ] ; then
#	  rm bin/$(PRGS)
#	fi
	@for dir in $(DIRS); do\
	    echo "==== Compiling in $$dir ====";\
	    (cd $$dir; make -f Makefile.linux || break);\
	done
	
clean: makeinclude
	@for dir in $(DIRS); do\
	    echo "==== Cleaning in $$dir ====";\
	    (cd $$dir; make clean || break);\
	done

install:
	#rm -f ~/bin/$(PRGS)
	cp bin/$(PRGS)$(EXT) ~/bin

run:
	./bin/$(PRGS)
